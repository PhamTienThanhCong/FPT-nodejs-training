<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>
        eidt user |
        <%= siteName %>
    </title>

    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <%- include('../imports/css.ejs') %>

</head>

<style>
    .product-image-container {
        display: flex;
        justify-content: center;
    }
</style>

<body class="hold-transition skin-blue sidebar-mini">

    <div class="wrapper">
        <%- include('../partials/admin_header.ejs') %>
            <%- include('../partials/admin_slider.ejs') %>

                <div class="content-wrapper">

                    <section class="content">
                        <div class="row">
                            <div class="col-md-12 offset-md-3">
                                <div class="box box-primary">
                                    <div class="box-header with-border">
                                        <h3 class="box-title">Edit <%=user.username %></h3>
                                    </div>

                                    <form method="POST" action="/admin/customer/<%= user.id %>/update">
                                        <div class="box-body">
                                            <div class="form-group">
                                                <label for="username">username</label>
                                                <input type="text" class="form-control" id="username" value="<%= user.username %>" name="username" placeholder="Enter username">
                                            </div>
                                            <div class="form-group">
                                                <label for="email">email</label>
                                                <input type="email" class="form-control" id="email" value="<%= user.email %>" name="email" placeholder="Enter email">
                                            </div>
                                            <div class="form-group">
                                                <label for="username">address</label>
                                                <input type="text" class="form-control" id="address" value="<%= user.address %>" name="address" placeholder="Enter address">
                                            </div>
                                            <div class="form-group">
                                                <label for="phone">phone</label>
                                                <input type="text" class="form-control" id="phone" value="<%= user.phone %>" name="phone" placeholder="Enter phone">
                                            </div>
                                        </div>

                                        <div class="box-footer">
                                            <button type="submit" class="btn btn-primary">Update</button>
                                            <% if(user.block == false) { %>
                                                <a href="/admin/customer/<%= user.id %>/block" class="btn btn-danger">Block</a>
                                                <% } else { %>
                                                    <a href="/admin/customer/<%= user.id %>/unblock" class="btn btn-success">Unblock</a>
                                                    <% } %>
                                                    
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>


                    </section>
                </div>

                <%- include('../partials/admin_footer.ejs') %>

                    <div class="control-sidebar-bg"></div>
    </div>
    <%- include('../imports/js.ejs') %>
</body>

</html>